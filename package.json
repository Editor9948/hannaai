{
  "name": "hannaai-monorepo",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "HannaAI",
    "HannaAiServer"
  ],
  "scripts": {
    "install:all": "npm --prefix HannaAI install && npm --prefix HannaAiServer install",
    "build:client": "npm --prefix HannaAI run build",
    "build": "npm run build:client",
    "start": "node HannaAiServer/src/server.js",
    "prepare-deploy": "node ./scripts/prepareDeploy.js",
    "deploy": "npm run prepare-deploy && npm run start"
  }
}
